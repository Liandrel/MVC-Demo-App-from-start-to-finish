@using System.Globalization
@model MVCDemoApp.Models.OrderDisplayModel

@{
    ViewData["Title"] = "Display";
}

<h1>Display</h1>

@if (Model.Order is null)
{
        <h4>The requested record was not found</h4>
}
else
{
        <table class="table">
            <tbody>
                <tr>
                    <td><strong>Order Name</strong></td>
                    <td>@Html.DisplayFor(modelItem => Model.Order.OrderName)</td>
                </tr>
                <tr>
                    <td><strong>Order Date</strong></td>
                    <td>@Html.DisplayFor(modelItem => Model.Order.OrderDate)</td>
                </tr>
                <tr>
                    <td><strong>Order Total</strong></td>
                    <td>@Html.DisplayFor(modelItem => Model.Order.Total)</td>
                </tr>
                <tr>
                    <td><strong>Item Ordered</strong></td>
                    <td>@Html.DisplayFor(modelItem => Model.ItemPurchased)</td>
                </tr>
                <tr>
                    <td><strong>Quantity</strong></td>
                    <td>@Html.DisplayFor(modelItem => Model.Order.Quantity)</td>
                </tr>
            </tbody>
        </table>

            <h3>Change Order Name</h3>

            <form asp-action="Update">
                <input name="id" value="@Model.Order.Id" type="hidden"/>
                <div class="form-group">
                    <label class="control-label">Order Name</label>
                    <input name="orderName" value="@Model.Order.OrderName" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Update Order Name" class="btn btn-primary mt-1" />
                </div>
            </form>
}